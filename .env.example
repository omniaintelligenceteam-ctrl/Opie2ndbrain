# =============================================================================
# Opie2ndbrain — Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values.
# NEVER commit .env or .env.local to version control.
# =============================================================================

# ---------------------------------------------------------------------------
# Gateway (OpenClaw / MoltBot)
# ---------------------------------------------------------------------------
# Primary gateway URL — your OpenClaw or MoltBot instance
OPENCLAW_GATEWAY_URL=http://localhost:3457
# Authentication token for the gateway
GATEWAY_TOKEN=

# Legacy env-var aliases (still supported, OPENCLAW_* takes precedence)
# MOLTBOT_GATEWAY_URL=
# MOLTBOT_GATEWAY_TOKEN=

# OpenClaw execute endpoint (for /api/openclaw/doit route)
OPENCLAW_URL=http://localhost:3000
OPENCLAW_TOKEN=

# ---------------------------------------------------------------------------
# Supabase
# ---------------------------------------------------------------------------
# Project URL (public, used both server- and client-side)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
# Public anon key (client-side, respects RLS)
NEXT_PUBLIC_SUPABASE_ANON_KEY=
# Service role key (server-side only, bypasses RLS — keep secret!)
SUPABASE_SERVICE_KEY=
# Aliases used by some server routes
SUPABASE_URL=
SUPABASE_ANON_KEY=

# ---------------------------------------------------------------------------
# AI Providers
# ---------------------------------------------------------------------------
# Anthropic (Claude)
ANTHROPIC_API_KEY=

# Ollama cloud
OLLAMA_API_KEY=
OLLAMA_API_URL=https://ollama.com/v1

# OpenAI (optional)
OPENAI_API_KEY=

# ---------------------------------------------------------------------------
# Memory
# ---------------------------------------------------------------------------
# Memory server URL (local memory service)
MEMORY_SERVER_URL=http://localhost:3456

# ---------------------------------------------------------------------------
# TTS / Speech
# ---------------------------------------------------------------------------
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=eastus
ELEVENLABS_API_KEY=

# ---------------------------------------------------------------------------
# External Services
# ---------------------------------------------------------------------------
BRAVE_API_KEY=
GITHUB_TOKEN=

# ---------------------------------------------------------------------------
# HeyGen (Video Generation)
# ---------------------------------------------------------------------------
HEYGEN_API_KEY=
HEYGEN_DEFAULT_AVATAR_ID=
HEYGEN_DEFAULT_VOICE_ID=
HEYGEN_WEBHOOK_SECRET=

# ---------------------------------------------------------------------------
# App / Auth
# ---------------------------------------------------------------------------
# Dashboard API key — protects all /api/* routes via middleware
DASHBOARD_API_KEY=

# Public app URL (used for internal fetch calls)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Set to 'false' to use remote OpenClaw execution instead of local tools
EXECUTE_LOCAL=true

# ---------------------------------------------------------------------------
# Notifications gateway (may differ from main gateway)
# ---------------------------------------------------------------------------
OPIE_GATEWAY_URL=
OPIE_GATEWAY_TOKEN=
